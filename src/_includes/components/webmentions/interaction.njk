{% macro interaction(type, singular, plural, webmentions) %}
{% set items = webmentions | webmentionsByType(type) %}

{% if items | length > 0 %}
<section aria-labelledby="webmention-{{ plural | slug }}">
<details class="webmention__interaction">
  <summary id="webmention-{{ plural | slug }}">{{ plural }}</summary>
  <ul class="webmention__items-list">
    {% for item in items %}
      <li class="webmention__item">
        <a href="{{ item.url }}">
          <img src="{{ item.author.photo }}" alt=""/>
          <span class="visuallyhidden">{{ singular }} from: {{ item.author.name }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>
  </details>
</section>
{% endif %}
{% endmacro %}
