---
  stylesheets:
    - reply.css
  category: Reply
  og: 
    type: artice
---

{% extends './page.njk' %}

{% block content %}
  <article class="reply content-section h-entry">
    <header>
      <h1><a href="{{ url }}" class="u-url u-in-reply-to">{{ title }}: {{ url }}</a></h1>
      <aside aria-label="post meta data">
          <small>
            Published at:
            <time class="dt-published" datetime="{{ date | formatDate('YYYY-MM-DD hh:mm:ss') }}">
              {{ date | formatDate('Do of MMMM, YYYY') }}
            </time>
          </small>
          <small>
            <a class="u-url"  href="{{ site.url + page.url }}">permalink<span class="visuallyhidden"> to this reply</span></a>
          </small>
      </aside>
    </header>
    <section class="e-content">
      {{ content | safe }}
      {% if silo === 'mastodon' %}
        <a class="u-url" href="https://brid.gy/publish/mastodon" hidden></a>
      {% endif %}

      {% if silo === 'twitter' %}
        <a class="u-url" href="https://brid.gy/publish/twitter" hidden></a>
      {% endif %}
    </section>

    <footer aria-labelledby="this-is-me">
      <h2 id="this-is-me">This is me</h2>
      {% from './components/h-card/h-card.njk' import hCard %}
      {{ hCard(site.gravatar, 'author') }}
    </footer>
  </article>

{% endblock %}
