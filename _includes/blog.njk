---
  stylesheets:
    - blog.css
  featuredImageFallback: false
  category: Blog
  og: 
    type: artice
---

{% extends './page.njk' %}

{% block content %}
  <article class="blog content-section h-entry">
    <header>
      <h1 class="{% if showPageTitle === false %}visuallyhidden{% endif %} p-name">{{ title }}</h1>
      <aside aria-label="post meta data">
          <small>
            Published at:
            <time class="dt-published" datetime="{{ date | formatDate('YYYY-MM-DD hh:mm:ss') }}">
              {{ date | formatDate('Do of MMMM, YYYY') }}
            </time>
          </small>
          <small class="blog__tags">
            Filled under:
            <ul class="blog__tags-list">
              {% for tag in tags | remove('blog') %}
                <li class="blog__tags-list-item p-category">{{ tag }}</li>
              {% endfor %}
            </ul>
          </small>
          <small>
            <a class="u-url"  href="{{ page.url }}">permalink<span class="visuallyhidden"> to this post</span></a>
          </small>
      </aside>
    </header>
    <section class="e-content">
      {{ content | safe }}
    </section>

    {% if tweetUrl %}
    <footer aria-labelledby="comments">
      <h2 id="comments">Comments</h2>
      Do you have any comments? A proper comment secion is still being constructed, but you
      can let me know what you think about it on Twitter under <a rel="syndication" class="u-syndication" href="{{ tweetUrl }}">this tweet</a>!
      {% from './components/webmentions/interaction.njk' import interaction %}
      {% from './components/webmentions/replies.njk' import replies %}
      {% set webmentionsForUrl = webmentions | getWebmentionsForUrl(site.url + page.url) %}
      {{ interaction(['like-of', 'repost-of'], 'Like', 'Likes and reposts', webmentionsForUrl) }}
      {{ replies(webmentionsForUrl) }}
    </footer>
    {% endif %}

    <aside aria-labelledby="this-is-me">
      <h2 id="this-is-me">This is me</h2>
      {% from './components/h-card/h-card.njk' import hCard %}
      {{ hCard(site.gravatar, 'author') }}
    </aside>

  </article>

{% endblock %}
